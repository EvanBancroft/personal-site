---
import PrivateLayout from "../layouts/PrivateLayout.astro";

const gifts = [
  {
    title: "Wolverine Lego Hand",
    link: "https://www.target.com/p/lego-marvel-wolverine-39-s-adamantium-claws-collectible-building-kit-x-men-glove-76250/-/A-87830688#lnk=sametab",
  },
  {
    title: "Golf Rangefinder",
    link: "https://www.costco.com/caddytek-golf-laser-rangefinder%2c-caddyview-v3-%2bslope.product.4000228985.html",
  },
  {
    title: "Golf Push Cart",
    link: "https://www.costco.com/caddytek-lite-auto-%2b360-3-wheel-golf-cart.product.4000274859.html",
  },
  {
    title: "Versa Grips (find size)",
    link: "https://www.sonos.com/en-us/shop/era-100-black",
  },
  { title: "Cooking Apron - No link, surprise me" },
  {
    title: "Golf Shoes",
    link: "https://www.dickssportinggoods.com/p/nike-mens-air-max-90-g-golf-shoes-21nikmrmx90gsprtggsh/21nikmrmx90gsprtggsh",
  },
  {
    title: "Logitech MX Master 3s",
    link: "https://www.amazon.com/Logitech-Master-Advanced-Wireless-Mouse/dp/B07XC2FWD1",
  },
  {
    title: "Airpods Pro 2",
    link: "https://www.target.com/p/airpods-pro-2nd-generation-with-magsafe-case-usb-c/-/A-85978622#lnk=sametab",
  },
  {
    title: "Sonos Era 100",
    link: "https://www.sonos.com/en-us/shop/era-100-black",
  },
  {
    title: "Unifi Express",
    link: "https://store.ui.com/us/en/category/all-unifi-cloud-gateways/products/ux",
  },
];
---

<PrivateLayout title="Evan's Gift List">
  <main class="h-lvh">
    <div
      class="flex flex-col gap-[max(2vw,28px)] m-auto w-10/12 lg:w-5/12 h-lvh py-[max(72px,5vw)]"
    >
      <h1 class="text-4xl font-bold lg:text-[max(64px,4vw)] leading-none">
        Evan's Gift List
      </h1>
      <ul class="list-disc">
        {
          gifts.map((gift) => (
            <li>
              {gift.title}
              {gift.link && (
                <span>
                  {" "}
                  -{" "}
                  <a href={gift.link} target="_blank" rel="noreferrer">
                    link
                  </a>
                </span>
              )}
            </li>
          ))
        }
      </ul>

      <style>
        main {
          color: white;
          font-family: "JetBrains Mono", serif;
        }
        a {
          color: lightgreen;
          text-decoration: underline;
        }
        .astro-a {
          position: absolute;
          top: -32px;
          left: 50%;
          transform: translatex(-50%);
          width: 220px;
          height: auto;
          z-index: -1;
        }
      </style>
    </div>
  </main>
</PrivateLayout>
